{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "rootDir": ".",
    "outDir": "dist",

    "types": ["node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]

}