{
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "Node16",

    /* Module resolution (IMPORTANT for noble) */
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Project structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Type safety */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Node / tooling */
    "types": ["node"]
  },
  
  
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}